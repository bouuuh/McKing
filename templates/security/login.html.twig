{% extends 'base.html.twig' %}

{% block title %}Connexion - McKing{% endblock %}

{% block content %}

    <div class="around">
    <div class="container-register-orange">
    <div class="connect-logo">
    <img src="{{ asset('assets/images/Logo.svg') }}">
    </div>
    <div  class="content-register">
    <form method="post">
    {% if error %}
        <div class="alert alert-danger">{{ error.messageKey|trans(error.messageData, 'security') }}</div>
    {% endif %}
    <div class="login-input">
    <div>
        <label for="inputEmail">Email</label>
    </div>
    <div>
        <input type="email" value="{{ last_username }}" name="email" autocomplete="email" required autofocus>
    </div>
    
    </div>
    <div class="login-input">
    <div>
        <label for="inputPassword">Mot de passe</label>
    </div>
    <div>
        <input type="password" name="password" autocomplete="current-password" required>
    </div>
    </div>
       <input type="hidden" name="_csrf_token"
           value="{{ csrf_token('authenticate') }}"
    >
  
     <button class="button-connect" type="submit">
        Se connecter
    </button>
</form>   
    <div class="register">
    <p>Pas de compte ? <a href="{{ path('register') }}">Inscrivez-vous ici</a>.</p>
    </div>
  </div>
    </div>
    </div>



{% endblock %}
