{% extends 'base.html.twig' %}

{% block title %}Mon historique de commande - McKing{% endblock %}

{% block content %}

<div class="contour2">
    <div class="logo-loyalty">
        <img src="{{ asset('assets/images/Logo.svg') }}" alt="Logo McKing">
    </div>
    <a href="{{ path('account_history') }}" class="arrow"><img src="{{ asset('/assets/images/arrow.svg') }}" alt="retour"></a>
    <h1 class="info-title">Détails de la commande</h1>

            <div class"arround-order-history-list">  
            <div class="order-history-list">
                <h1>{{ order.city.city }}</h1>
                <p>n°{{ order.reference }}</p>
                <hr>
            
            {% for order_history in order_history %}
                {{ dump(order_history) }}
                    <p>
                        {% if order_history.idMenu == null %}
                            {{ order_history.idProduct.name }} - {{ (order_history.idProduct.price / 100)|number_format(2, ',', '.') }} €
                        {% else %}
                            {{ order_history.menu.name }}
                        {% endif %}     
                    </p>
                    
            {% endfor %}
</div> 
            </div>
{% endblock %}

