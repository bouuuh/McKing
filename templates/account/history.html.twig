{% extends 'base.html.twig' %}

{% block title %}Mon historique de commande - McKing{% endblock %}

{% block content %}

<div class="contour2">
    <div class="logo-loyalty">
        <img src="{{ asset('assets/images/Logo.svg') }}" alt="Logo McKing">
    </div>
    <a href="{{ path('account') }}" class="arrow"><img src="{{ asset('/assets/images/arrow.svg') }}" alt="retour"></a>
    <h1 class="info-title">Mes commandes</h1>
        {% if orders|length == 0 %}
            <p>Vous n'avez pas encore passé de commande.</p>
        {% else %}
            {% for order in orders %}
                {# {{ dump(order) }} #}
                <div class="arround-order-history-list">
                    <div class="order-history-list">
                        <a href="{{ path('account_history_order', { 'reference' : order.reference }) }}">
                            <h1>Commande n°{{ order.reference }}</h1>
                            <p>{{ order.date|date('d/m/Y') }} - lieu</p>
                            <br>
                            <p>
                                {{ (order.total / 100)|number_format(2, ',', '.') }} € - 
                                {% if order.state == 0 %}
                                Annulée
                                {% elseif order.state == 1 %}
                                Payée
                                {% elseif order.state == 2 %}
                                Préparation en cours
                                {% elseif order.state == 3 %}
                                Terminée
                                {% endif %}
                            </p>
                        </a>
                    </div>
                </div>    
            {% endfor %}
        {% endif %}
{% endblock %}

{% block navBar %}

{% endblock %}