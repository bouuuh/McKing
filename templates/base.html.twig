<!DOCTYPE html>
<html>
    <head>
        <meta charset="UTF-8">
        <title>{% block title %}McKing - Le Roi du Fast Food{% endblock %}</title>
        <link rel="icon" href="{{ asset('/assets/images/Logo.svg') }}">
        <link rel="stylesheet" href="{{ asset('/assets/css/style.css') }}">
        <link rel="stylesheet" href="{{ asset('/assets/css/style2.css') }}">
        <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.2.0-beta1/dist/css/bootstrap.min.css" rel="stylesheet">
        <link href="{{ asset('/assets/css/bootstrap.min.css') }}" rel="stylesheet" integrity="" crossorigin="anonymous">
        <script src="{{ asset('/assets/js/app.js') }}" defer></script>

        <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/js/bootstrap.bundle.min.js" integrity="sha384-w76AqPfDkMBDXo30jS1Sgez6pr3x5MlQ1ZAGC+nuZB+EYdgRZgiwxhTBTkF7CXvN" crossorigin="anonymous"></script>
        {# Run `composer require symfony/webpack-encore-bundle` to start using Symfony UX #}
        {% block stylesheets %}
            {{ encore_entry_link_tags('app') }}
        {% endblock %}

        {% block javascript_stripe %}
            
        {% endblock %}

        {% block javascripts %}
            {{ encore_entry_script_tags('app') }}
        {% endblock %}
        <link rel="preconnect" href="https://fonts.googleapis.com"><link rel="preconnect" href="https://fonts.gstatic.com" crossorigin><link href="https://fonts.googleapis.com/css2?family=Lilita+One&family=Signika:wght@300;400;500;700&display=swap" rel="stylesheet">
    </head>
    <body>


{# header #}

{% if block('headerProduct') is defined %}


    <div class="order-header">
        <div></div>
        <div class="order-logo"><img src="{{ asset('assets/images/Logo.svg') }}" alt="Logo"></div>
        <div class="order-cart">
            <a href="{{ path('cart') }}" class="order-cart-btn">
                <img src="{{ asset('assets/images/Cart.svg') }}" alt="Panier">
            </a>
        </div>
    </div>


{% endif %}




{% block content %}

   
{% endblock %}


{% if block('navBar') is defined %}
    <div class="thenavBar">

        <div class="case ">
            <a href="{{ path('home') }}" class="Home"><img class="icon_thenavBar" src="{{ asset('assets/images/Home.svg') }}"></a>
        </div>

        <div class="case ">
            <a href="{{ path('map') }}" class="Map"><img class="icon_thenavBar" src="{{ asset('assets/images/Map.svg') }}"></a>
        </div>

        <div class="case">
            <a href="{{ path('category') }}" class="Commander">
            <div>
                <img class="icon_thenavBar burger" src="{{ asset('assets/images/Commander.svg') }}">
                <p>Commander</p>
            </div>
            </a>
        </div>

        <div class="case ">
            <a href="{{ path('loyalty') }}" class="Fidelite"><img class="icon_thenavBar" src="{{ asset('assets/images/Fidelite.svg') }}"></a>
        </div>

        <div class="case case5">
            <a href="{{ path('account') }}" class="Compte"><img class="icon_thenavBar" src="{{ asset('assets/images/Compte.svg') }}"></a>
        </div>

    </div>
{% endif %}

<script src="{{ asset('assets/js/bootstrap.bundle.min.js') }}"></script>
    </body>

    {% block script %}
        
    {% endblock %}

</html>
