{% extends 'base.html.twig' %}

{% block title %}Mot de passe oublié - McKing{% endblock %}

{% block content %}

    <div class="around">
    <div class="container-register-orange">
    <div class="connect-logo">
    <a href="{{ path('home') }}"><img src="{{ asset('assets/images/Logo.svg') }}"></a>
    </div>

<div class='picture-content-register'>
    <div class="picture-register">
        <a href="{{ path('home') }}"><img src="{{ asset('assets/images/connexion.png') }}" alt="Photo de produits"></a>
    </div>  

    <div  class="content-register">

    {% for message in app.flashes('notice') %}
        <div class="alert alert-info">
            {{ message }}
        </div>
    {% endfor %}

    <form method="post">
    <div class="login-input">
    <div>
        <label for="inputEmail">Email</label>
    </div>
    <div class='input-connect'>
        <input type="email"  name="email" autocomplete="email" required autofocus>
    </div>
    
    <button class="button-connect" type="submit">
        Rénitialiser mon mot de passe
    </button>
</form>   
    <div class="register">
    <p>Ou souhaitez-vous <a href="{{ path('login') }}">vous connecter ?</a>.</p>
    </div>
  </div>
  </div>
    </div>
    </div>



{% endblock %}
